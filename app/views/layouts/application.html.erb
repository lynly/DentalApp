<!DOCTYPE html>
<html>
  <head>
    <title>DoctorApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>

      <% if @current_doctor %>
        <%= link_to 'Doctors', '/doctors' %> | <%= link_to 'Services', '/services' %>
        <%= @current_doctor.first_name %> | <%= link_to "Logout", '/logout' %>
      <% end %>

    </nav>

    <%= yield %>

  </body>
</html>
