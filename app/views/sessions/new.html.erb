<div class="login">
  <h4>Login</h4>

  <% if flash[:login_error] %>
    <p>
      <%= flash[:login_error] %>
    </p>
  <% end %>


  <%= form_tag '/login' do %>

    <%= text_field_tag :email, nil, placeholder: 'Email' %>
    <%= password_field_tag :password, nil, placeholder: 'Password' %>

    <button class="btn waves-effect waves-light" type="submit" name="action"><%= submit_tag "Log In" %></button>

  <% end %>

    <hr>

    <button class="btn waves-effect waves-light" type="submit" name="action"><%= link_to "Sign Up", "/signup" %></button>

</div>
