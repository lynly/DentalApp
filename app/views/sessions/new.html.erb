<div class="login">
  <h4>Login</h4>

  <% if flash[:error] %>
    <p>
      <%= flash[:error] %>
    </p>
  <% end %>

  <%= form_tag '/login' do %>
      <%= text_field_tag :email, nil, placeholder: 'Email' %>
      <%= password_field_tag :password, nil, placeholder: 'Password' %>
    <%= button_tag "Login", :class => "btn waves-effect waves-light" %>
  <% end %>

    <hr>

  <p>New to the DoctorApp? Register now.</p>
  <%= link_to 'Sign Up', '/signup', :class => "btn waves-effect waves-light" %>


</div>
