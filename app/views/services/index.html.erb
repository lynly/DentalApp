<div class="container">
  <div class="row">
    <div class="col s9">
      <h4>What we do</h4>
    </div>

    <div class="col s3">
      <% if @current_doctor %>
        <a class="waves-effect waves-light z-depth-0 btn" href="/services/new">New Service</a>
      <% end %>
    </div>

  </div>


  <table class="highlight">
    <thead>
      <tr>
        <th>Service</th>
        <th>Category</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% for service in @all_services.sort_by(&:category_id) %>
        <tr>
          <td><%= link_to(service.name, "/services/#{service.id}") %></td>
          <td><%= service.category.name %></td>
        <% if @current_doctor %>
          <td><%= link_to "Edit", edit_service_path(service) %></td>
          <td><%= link_to("Delete", service, method: :delete, data: { confirm: "Are you sure?" }) %></td>
        <% end %>
        </tr>
      <% end %>
    <tbody>
  </table>

</div>
