<h4><%= @service.name %></h4>
<p>Category: <%= @service.category.name %> </p>
<p>Specialising Doctor:

  <% @service.doctors.uniq.each do |doctor | %>
    <%= link_to(doctor.first_name, "/doctors/#{doctor.id}") %>  <%= link_to(doctor.last_name, "/doctors/#{doctor.id}") %>
  <% end %>

</p>

<p><%= @service.description %></p>

<div class="controls">
  <%= link_to("Edit", "/services/#{@service.id}/edit") %>
  <%= link_to("Delete", "/services/#{@service.id}", method: :delete, data: { confirm: "Are you sure?" }) %>
</div>
