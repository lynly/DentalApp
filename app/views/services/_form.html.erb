<div class="row">
  <%= form_for @service do |f| %>
    <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :name, required: true, placeholder: 'Name' %>
        </div>
         <div class="input-field col s6">
          <%= f.collection_select :category_id, Category.all, :id, :name %>
          <label>Category</label>
        </div>
    </div>

          <label>Specialising Doctor</label>
          <%= collection_select(:service, :doctors, Doctor.all, :id, :last_name, {:prompt => "Select", :class => "input-field col s12"}, {:multiple => true}) %>

    <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :description, required: true, placeholder: 'Description' %>
        </div>
    </div>

      <div class="row">
    <button class="btn waves-effect waves-light" type="submit" name="action"><%= f.submit %></button>
     <% end %>

     </div>
